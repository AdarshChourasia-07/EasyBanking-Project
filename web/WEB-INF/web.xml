<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistrationControllerServlet</servlet-name>
        <servlet-class>easybanking.controller.RegistrationControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerLogin</servlet-name>
        <servlet-class>easybanking.controller.CustomerLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FtWithin</servlet-name>
        <servlet-class>easybanking.controller.FtWithin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FTOtherBank</servlet-name>
        <servlet-class>easybanking.controller.FTOtherBank</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Complaint</servlet-name>
        <servlet-class>easybanking.controller.Complaint</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewComplaint</servlet-name>
        <servlet-class>easybanking.controller.ViewComplaint</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewTransactions</servlet-name>
        <servlet-class>easybanking.controller.ViewTransactions</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>easybanking.controller.WelcomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCredentials</servlet-name>
        <servlet-class>easybanking.controller.UpdateCredentials</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>easybanking.controller.LogOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationControllerServlet</servlet-name>
        <url-pattern>/RegistrationControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerLogin</servlet-name>
        <url-pattern>/CustomerLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FtWithin</servlet-name>
        <url-pattern>/FtWithin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FTOtherBank</servlet-name>
        <url-pattern>/FTOtherBank</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Complaint</servlet-name>
        <url-pattern>/Complaint</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewComplaint</servlet-name>
        <url-pattern>/ViewComplaint</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewTransactions</servlet-name>
        <url-pattern>/ViewTransactions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/WelcomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCredentials</servlet-name>
        <url-pattern>/UpdateCredentials</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/LogOut</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
